    "version": "0.2.0",
    "configurations": [       
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/ConsoleHost/bin/Debug/net5.0/ConsoleHost.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ConsoleHost",
            "console": "externalTerminal",
            "stopAtEntry": false
        },
        {
            "name": "Build with DTO and Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build_with_dto",
            "program": "${workspaceFolder}/ConsoleHost/bin/Debug/net5.0/ConsoleHost.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ConsoleHost",
            "console": "externalTerminal",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },       
    ]
}